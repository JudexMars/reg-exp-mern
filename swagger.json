    "/api/items/": {
      "get": {
        "summary": "returns all data by regular expression",
        "tags": [
          "regular expression"
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "document": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "_id": {
                        "type": "string"
                      },
                      "title": {
                        "type": "string"
                      },
                      "pattern": {
                        "type": "string"
                      },
                      "placeholder": {
                        "type": "string"
                      },
                      "rating": {
                        "type": "object"
                      },
                      "additionalInfo\"": {
                        "type": "object"
                      },
                      "color\"": {
                        "type": "object"
                      }
                    }
                  },
                  "example": [
                    {
                      "_id": "5fddf22ec0a636d64dc16927",
                      "title": "Никнейм",
                      "description": "Никнейм состоящий от 3 до 16 символов. Допускаются: буквы (a-zA-z), цифры, дефис и нижнее подчеркивание",
                      "pattern": "/^[a-zA-Z0-9_-]{3,16}$/",
                      "placeholder": "Nickname_",
                      "rating": {
                        "likes": 5,
                        "views": 22
                      },
                      "additionalInfo": {
                        "_id": "5fde3f2fc0a636d64dc1692e",
                        "name": "Строки",
                        "colorId": "5fe8c0eed14a9e7eab184d25"
                      },
                      "color": {
                        "_id": "5fe8c0eed14a9e7eab184d25",
                        "hex": "#eb5757",
                        "name": "red"
                      }
                    }
                  ]
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "returns the identifier of the created entity",
        "tags": [
          "regular expression"
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/regExp"
              },
              "example": {
                "title": "Почта",
                "description": "Проверка почты на корректность",
                "pattern": "/^([A-Z|a-z|0-9](\\\\.|_){0,1})+[A-Z|a-z|0-9]\\\\@([A-Z|a-z|0-9])+((\\\\.){0,1}[A-Z|a-z|0-9]){2}\\\\.[a-z]{2,3}$/gm",
                "placeholder": "my@email.com",
                "categoriesId": "5fde4517c0a636d64dc16933",
                "creator": "JudexMars"
              }
            }
          }
        },
        "parameters": [
          {
            "name": "title",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "test"
            }
          },
          {
            "name": "description",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "Description"
            }
          },
          {
            "name": "pattern",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "[A-z0-9]"
            }
          },
          {
            "name": "placeholder",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "test hint"
            }
          },
          {
            "name": "categoriesId",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "5fde4517c0a636d64dc16933"
            }
          },
          {
            "name": "creator",
            "in": "query",
            "required": true,
            "schema": {
              "type": "string",
              "example": "JudexMars"
            }
          }
        ],
        "description": "parameter id just for test",
        "responses": {
          "204": {
            "description": "OK",
            "content": {
              "document": {
                "schema": {
                  "type": "object",
                  "example": "some text"
                }
              }
            }
          }
        }
      }
    },
